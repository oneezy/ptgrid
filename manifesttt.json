{
    "name": "Bot Frames",
    "short_name": "Bot Frames",
    "description": "Keep track of all your crypto bots with this sick extension from Coinbot VPS.",
    "version": "1.0.0",
    "manifest_version": 2,
    "icons": {
        "128": "images/icon.png"
    },
    "browser_action": {
        "default_icon": "images/icon.png"
    },
    "chrome_url_overrides" : {
        "newtab": "index.html"
    },
    "content_scripts": [{
        "matches": [
            "*://*/monitoring",
            "*://*/possible-buys-log",
            "*://*/pairs-log",
            "*://*/dca-log",
            "*://*/pending-log",
            "*://*/buy-log",
            "*://*/sales-log",
            "*://*/dust-log",
            "*://*/api-logs",
            "*://*/config",
            "*://*/login",
            "*://*/logout",
            "*://*/setup",
            "*://*/changePassword"],

        "js": [
            "lib/jquery.min.js",
            "bot-frames/templates.js",
            "bot-frames/bot-frames.js"],

        "css": [
            "lib/icon.css",
            "lib/material-components-web.min.css",
            "bot-frames/bot-frames.css"],

        "all_frames": true,
        "run_at": "document_end"
    }],

    "background": {
        "scripts": ["hot-reload.js"]
    },
    
    "web_accessible_resources":[
        "lib/*",
        "images/*"
    ]
}
