{
    "name": "PT Grid",
    "short_name": "PT Grid",
    "description": "Keep track of all your Profit Trailer bots on one screen!",
    "version": "1.2.0",
    "manifest_version": 2,
    "icons": {
        "128": "images/icon.png"
    },
    "browser_action": {
        "default_icon": "images/icon.png"
    },
    "content_scripts": [{
        "matches": [
            "*://*/monitoring",
            "*://*/possible-buys-log",
            "*://*/pairs-log",
            "*://*/dca-log",
            "*://*/pending-log",
            "*://*/buy-log",
            "*://*/sales-log",
            "*://*/dust-log",
            "*://*/api-logs",
            "*://*/config",
            "*://*/login",
            "*://*/logout",
            "*://*/setup",
            "*://*/changePassword"],

        "js": [
            "lib/jquery.min.js",
            "content.js",
            "pt-bot/templates/template-list.js",
            "pt-bot/templates/template-bot.js",
            "pt-bot/pt-bot.js"],

        "css": [
            "lib/icon.css",
            "lib/material-components-web.min.css",
            "pt-bot/pt-bot.css",
            "pt-bot/pt-list.css"],

        "all_frames": true,
        "run_at": "document_end"
    }],

    "background": {
        "scripts": [
            "lib/jquery.min.js",
            "lib/material-components-web.min.js",
            "hot-reload.js",
            "background.js",
            "pt-grid/pt-grid.js"
        ]
    },

    "permissions": [
        "tabs",
        "storage",
        "identity"
    ],

    "web_accessible_resources":[
        "lib/*",
        "pt-grid/*",
        "images/*"
    ]
}
